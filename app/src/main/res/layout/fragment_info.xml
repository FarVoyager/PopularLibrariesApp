<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/infoLogin"
        app:layout_constraintStart_toStartOf="@id/infoLogin"
        app:layout_constraintEnd_toEndOf="@id/infoLogin"
        android:background="#80000000"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />



    <TextView
        android:id="@+id/infoLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/hello_blank_fragment" />

    <TextView
        android:id="@+id/repo_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/infoLogin"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/repo_list_header"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_user_repos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"

        app:layout_constraintTop_toBottomOf="@id/repo_list_header"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>